---
import Navigation from "./navigation.astro";
import { Image } from "astro:assets";
import Logo from "../assets/happy_face.png";
---

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--tertiary-color);
        border: 0.5px solid var(--text-color);
        border-radius: 10px;
        width: 890px;
        margin: 1rem auto;
        padding: 0 1rem;
        transition: box-shadow 0.3s ease-in-out;
    }

    header:hover {
        --shadow-color: 0deg 0% 14%;
        --shadow-elevation-medium:
            0.3px 0.2px 0.4px hsl(var(--shadow-color) / 0.48),
            1.5px 1.3px 2.2px -1.2px hsl(var(--shadow-color) / 0.48),
            5.8px 5px 8.6px -2.5px hsl(var(--shadow-color) / 0.48);
        box-shadow: var(--shadow-elevation-medium);
    }

    .logo {
        filter: invert(100%);
    }

    @media (prefers-color-scheme: dark) {
        .logo {
            filter: invert(0);
        }
    }
</style>

<header>
    <a href="/"
        ><Image src={Logo} alt="logo" width={100} priority class="logo" /></a
    >
    <Navigation />
</header>
