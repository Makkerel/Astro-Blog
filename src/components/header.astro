---
import Navigation from "./navigation.astro";
import { Image } from "astro:assets";
import Logo from "../assets/happy_face.png";
---

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--tertiary-color);
        border: 0.5px solid var(--text-color);
        border-radius: 10px;
        margin: 1rem 0px;
        padding: 0 1rem;
        transition: box-shadow 0.2s ease-in-out;
        will-change: box-shadow;
    }

    header:hover {
        --shadow-color: 0deg 0% 13%;
        --shadow-elevation-medium:
            0px 1px 1.1px hsl(var(--shadow-color) / 0.57),
            0px 5.2px 5.7px -1.3px hsl(var(--shadow-color) / 0.54),
            0px 21px 23px -2.7px hsl(var(--shadow-color) / 0.52);
        box-shadow: var(--shadow-elevation-medium);
    }

    .logo {
        filter: invert(100%);
    }

    @media (prefers-color-scheme: dark) {
        .logo {
            filter: invert(0);
        }
    }
</style>

<header>
    <a href="/"
        ><Image src={Logo} alt="logo" width={100} priority class="logo" /></a
    >
    <Navigation />
</header>
