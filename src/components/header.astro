---
import Navigation from "./navigation.astro";
import { Image } from "astro:assets";
import Logo from "../assets/happy_face.png";
---

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--tertiary-color);
        border: 0.5px solid var(--text-color);
        border-radius: 10px;
        margin: 1rem 0px;
        padding: 0 1rem;
    }

    .logo {
        filter: invert(100%);
    }

    @media (prefers-color-scheme: dark) {
        .logo {
            filter: invert(0);
        }
    }
</style>

<header>
    <a href="/"
        ><Image src={Logo} alt="logo" width={100} priority class="logo" /></a
    >
    <Navigation />
</header>
