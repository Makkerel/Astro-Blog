---
import Navigation from "./navigation.astro";
import { Image } from "astro:assets";
import Logo from "../assets/happy_face.png";
import "../styles/global.css";
---

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--main_color);
        padding: 0 1rem;
    }

    .logo {
        padding: 0.5rem;
    }
</style>

<header>
    <a href="/"
        ><Image src={Logo} alt="Logo" width={80} class="logo" format="png" /></a
    >
    <Navigation />
</header>
