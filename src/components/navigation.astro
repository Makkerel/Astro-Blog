<style>
    /* nav styles */
    .nav_links {
        width: 100%;
        text-align: right;
        margin: 0;
    }

    .nav_links a {
        margin: 0 10px;
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: bold;
        text-transform: capitalize;
        color: var(--text-color);
    }

    @media screen and (min-width: 636px) {
        .nav_links {
            width: auto;
            background: none;
        }

        .nav_links a {
        }
    }

    .nav_links a:hover,
    .nav_links a:focus {
    }

    .expanded {
        display: unset;
    }
</style>

